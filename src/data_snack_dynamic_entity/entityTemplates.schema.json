{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "patternProperties": {
    "^[A-Z][a-zA-Z0-9]*$": {
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "simple"
              ]
            },
            "version": {
              "type": "integer"
            },
            "properties": {
              "type": "object",
              "patternProperties": {
                "^[a-zA-Z0-9_]+$": {
                  "anyOf": [
                    {
                      "type": "object",
                      "properties": {
                        "type": {
                          "type": "string"
                        },
                        "default": {
                          "type": [
                            "string",
                            "number",
                            "boolean"
                          ]
                        },
                        "key": {
                          "type": "boolean",
                          "enum": [
                            false
                          ]
                        },
                        "optional": {
                          "type": "boolean",
                          "default": false
                        },
                        "excluded": {
                          "type": "boolean",
                          "default": false
                        }
                      },
                      "additionalProperties": false
                    },
                    {
                      "type": "object",
                      "properties": {
                        "type": {
                          "type": "string"
                        },
                        "key": {
                          "type": "boolean",
                          "enum": [
                            true
                          ]
                        },
                        "optional": {
                          "type": "boolean",
                          "default": false,
                          "enum": [
                            false
                          ]
                        },
                        "excluded": {
                          "type": "boolean",
                          "default": false,
                          "enum": [
                            false,
                            true
                          ]
                        }
                      },
                      "additionalProperties": false
                    }
                  ]
                }
              },
              "additionalProperties": false
            }
          },
          "required": [
            "properties",
            "version",
            "type"
          ]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "compound"
              ]
            },
            "sources": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "entity": {
                    "type": "string"
                  },
                  "fields": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "field": {
                          "type": "string"
                        },
                        "source_field": {
                          "type": "string"
                        }
                      },
                      "additionalProperties": false,
                      "required": [
                        "field",
                        "source_field"
                      ]
                    }
                  },
                  "optional": {
                    "type": "boolean",
                    "default": false
                  }
                },
                "additionalProperties": false,
                "required": [
                  "entity",
                  "fields"
                ]
              }
            }
          },
          "required": [
            "type",
            "sources"
          ]
        }
      ]
    }
  },
  "additionalProperties": false
}