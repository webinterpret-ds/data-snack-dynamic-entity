{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "patternProperties": {
    "^[A-Z][a-zA-Z0-9]*$": {
      "type": "object",
      "properties": {
        "properties": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z0-9_]+$": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string"
                },
                "default": {
                  "type": ["string", "number", "boolean"]
                },
                "optional": {
                  "type": "boolean",
                  "default": false
                },
                "excluded": {
                  "type": "boolean",
                  "default": false
                },
                "key": {
                  "type": "boolean",
                  "default": false
                },
                "if": {
                  "properties": {
                    "key": {"const":  true}
                  },
                  "required": ["key"],
                  "not": {
                    "required": ["default"]
                  }
                },
                "then": {
                  "properties": {
                    "optional": {"const": false},
                    "excluded": {"const":  false}
                  }
                }
              },
              "required": [
              	"type"
              ]
            }
          },
          "additionalProperties": false
        }
      },
      "required": [
        "properties"
      ]
    }
  },
  "additionalProperties": false
}
