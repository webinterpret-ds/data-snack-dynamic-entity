{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "patternProperties": {
    "^[A-Z][a-zA-Z0-9]*$": {
      "type": "object",
      "properties": {
        "properties": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z0-9_]+$": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string"
                },
                "default": {
                  "type": ["string", "number", "boolean"]
                },
                "optional": {
                  "type": "boolean"
                }
              },
              "required": [
              	"type"
              ]
            }
          },
          "additionalProperties": false
        }
      },
      "required": [
        "properties"
      ]
    }
  },
  "additionalProperties": false
}
